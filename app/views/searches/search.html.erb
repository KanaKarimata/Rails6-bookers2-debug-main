<div class="container">
  <div class="row">
    <div class="col">
    <%= render 'search', range: @range %>

    <h3>Books search for "test"</h3>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
    </thead>
    <% if @range == "Book" %>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: "50x50" %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
    <% else %>
    <tbody>
      <% @user.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>